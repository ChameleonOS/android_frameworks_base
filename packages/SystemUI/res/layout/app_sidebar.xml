<?xml version="1.0" encoding="utf-8"?>

<com.android.systemui.statusbar.AppSidebar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_sidebar"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"   >

    <View
        android:layout_width="@dimen/config_app_sidebar_trigger_width"
        android:layout_height="match_parent"
        android:focusable="false"
        android:clickable="false"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/info_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_sidebar_info_bubble"
        style="@style/TextAppearance.AppSidebarInfo"
        android:alpha="0"
        android:visibility="gone" />

</com.android.systemui.statusbar.AppSidebar>